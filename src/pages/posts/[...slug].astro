---
import { getCollection } from 'astro:content';
import Layout from '#/layouts/Layout.astro';
import SchemaOrg from '#/components/SchemaOrg.astro';
import { siteConfig } from '#/data/site-config';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const postUrl = new URL(
  `/posts/${post.slug}`,
  Astro.site || siteConfig.url
).toString();
---

<Layout
  title={`${post.data.title} | Blog`}
  description={post.data.description}
  type="article"
  publishedTime={post.data.date}
  customSchema
>
  <SchemaOrg
    slot="head"
    type="article"
    headline={post.data.title}
    description={post.data.description || ''}
    datePublished={post.data.date}
    author={siteConfig.author.name}
    url={postUrl}
  />
  <article class="py-16 pt-28">
    <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 md:px-8 lg:px-12">
      <header class="max-w-4xl mx-auto mb-16 pb-16 border-b-2 border-border">
        <a
          href="/posts"
          class="inline-block font-mono text-sm uppercase tracking-widest mb-8 border-b-2 border-current hover:bg-accent hover:text-bg px-1"
        >
          ‚Üê Back to Blog
        </a>
        <time
          datetime={post.data.date.toISOString()}
          class="block font-mono text-sm tracking-widest text-text-muted uppercase mb-4"
        >
          {
            post.data.date.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl uppercase mb-4">
          {post.data.title}
        </h1>
        {
                    post.data.description && (
                        <p class="text-lg md:text-xl text-text-muted mb-4">
                            {post.data.description}
                        </p>
                    )
                }
        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="flex gap-2 flex-wrap">
              {post.data.tags.map((tag) => (
                <span class="tag">
                  {tag}
                </span>
              ))}
            </div>
          )
        }
      </header>

      <div class="prose max-w-4xl mx-auto">
        <Content/>
      </div>
    </div>
  </article>
</Layout>

<style>
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: var(--font-family-mono);
    font-weight: 700;
    text-transform: uppercase;
    margin-top: 4rem;
    margin-bottom: 1rem;
  }

  .prose :global(h1) {
    font-size: 2.25rem;
  }
  .prose :global(h2) {
    font-size: 1.875rem;
  }
  .prose :global(h3) {
    font-size: 1.5rem;
  }

  .prose :global(p) {
    margin-bottom: 1rem;
    font-size: 1rem;
    line-height: 1.75;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.75;
  }

  .prose :global(blockquote) {
    margin: 2rem 0;
    padding-left: 2rem;
    border-left: 4px solid var(--color-border);
    font-style: italic;
    color: var(--color-text-muted);
  }

  .prose :global(hr) {
    margin: 4rem 0;
    height: 2px;
    background-color: var(--color-border);
    border: none;
  }

  .prose :global(pre) {
    font-family: var(--font-family-mono);
    font-size: 0.875rem;
    padding: 2rem;
    background-color: var(--color-bg-alt);
    border: 2px solid var(--color-border);
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose :global(code) {
    font-family: var(--font-family-mono);
    font-size: 0.875rem;
    padding: 0.125rem 0.25rem;
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border-light);
    border-radius: 0.25rem;
  }

  .prose :global(pre code) {
    padding: 0;
    border: none;
    background: transparent;
  }

  .prose :global(img) {
    max-width: 100%;
    border: 2px solid var(--color-border);
    border-radius: 0.75rem;
  }

  .prose :global(a) {
    border-bottom: 2px solid currentColor;
  }

  .prose :global(a:hover) {
    background-color: var(--color-accent);
    color: var(--color-bg);
  }

  .prose :global(strong) {
    font-weight: 700;
  }
  .prose :global(em) {
    font-style: italic;
  }
</style>

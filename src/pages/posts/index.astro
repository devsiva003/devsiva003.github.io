---
import { getCollection } from 'astro:content';
import Layout from '#/layouts/Layout.astro';

const posts = await getCollection('posts', ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout
  title="Blog | Portfolio"
  description="Thoughts on design, development, and everything in between."
>
  <section class="py-32 pt-40">
    <div class="max-w-4xl mx-auto px-6 md:px-8">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl uppercase mb-4">
        Blog
      </h1>
      <p class="text-lg md:text-xl text-text-muted max-w-xl mb-16">
        Thoughts on design, development, and everything in between.
      </p>

      {sortedPosts.length > 0 ? (
        <div class="flex flex-col gap-8">
          {
            sortedPosts.map((post) => (
              <article class="bg-bg-alt border-2 border-border rounded-xl hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[8px_8px_0_var(--color-border)] transition-all overflow-hidden">
                <a
                  href={`/posts/${post.slug}`}
                  class="block p-8 border-0 hover:bg-transparent hover:text-inherit"
                >
                  <div class="flex items-center gap-4 mb-2">
                    <time 
                      datetime={post.data.date.toISOString()}
                      class="font-mono text-xs tracking-widest text-text-muted uppercase"
                    >
                      {post.data.date.toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      })}
                    </time>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex gap-2">
                        {post.data.tags.map((tag) => (
                          <span class="tag text-[0.65rem] py-0.5">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                  <h2 class="text-2xl font-mono font-bold mb-2">
                    {post.data.title}
                  </h2>
                  {post.data.description && (
                    <p class="text-text-muted mb-4">{post.data.description}</p>
                  )}
                  <span class="font-mono text-sm uppercase tracking-wide text-primary">
                    Read More →
                  </span>
                </a>
              </article>
            ))
          }
        </div>
      ) : (
        <div class="bg-bg-alt border-2 border-border rounded-xl p-12 text-center">
          <div class="max-w-md mx-auto">
            <p class="font-mono text-lg text-text mb-2">No posts yet</p>
            <p class="text-text-muted">
              Check back soon for new content. In the meantime, feel free to explore the rest of the site!
            </p>
            <a
              href="/"
              class="inline-flex items-center gap-2 font-mono text-sm uppercase tracking-wide text-primary hover:text-text transition-colors mt-6"
            >
              ← Back to Home
            </a>
          </div>
        </div>
      )}
    </div>
  </section>
</Layout>

---
import { skills } from '#/data/skills';
---

<div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-3">
  {
        skills.map((skill) => (
            <div class="group relative p-4 flex flex-col items-center gap-3 glass-card hover-lift hover:border-border cursor-default">
                <div class="size-7 flex items-center justify-center">
                    <skill.Icon
                        class="size-6"
                        style={skill.color ? `fill: ${skill.color}` : ""}
                    />
                </div>
                <span class="font-mono text-[0.6rem] text-center text-text-muted group-hover:text-text transition-colors leading-tight">
                    {skill.name}
                </span>
            </div>
        ))
    }
</div>

---
import { Github, Twitter, Linkedin, Mail, MapPin } from 'lucide-astro';
import { profile, socials } from '#/data/profile';

const iconMap = {
  github: Github,
  twitter: Twitter,
  linkedin: Linkedin,
};
---

<section class="py-20 pt-28 md:py-32 md:pt-40 min-h-[90vh] flex items-center">
  <div class="section-container">
    <div class="max-w-4xl md:mx-auto md:text-center">
      <span
        class="block font-mono text-sm mb-4 tracking-[0.2em] text-text-muted"
      >
        HELLO, I'M
      </span>
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl uppercase mb-6">
        {profile.name}
      </h1>

      <a
        href={profile.locationUrl}
        target="_blank"
        rel="noopener"
        class="location-link inline-flex items-center md:justify-center gap-2 mb-8 text-text-muted group"
      >
        <MapPin
          class="w-4 h-4 transition-transform duration-300 group-hover:scale-110"
        />
        <span class="font-mono text-sm tracking-wide relative">
          {profile.location}
          <span
            class="absolute left-0 bottom-0 w-0 h-px bg-current transition-all duration-300 group-hover:w-full"
          ></span>
        </span>
      </a>

      <p
        class="text-lg md:text-xl mb-8 max-w-2xl md:mx-auto font-mono font-medium text-text-muted"
      >
        {profile.tagline}
      </p>

      <div class="mb-12 max-w-2xl md:mx-auto">
        <p class="text-base text-text-muted leading-relaxed">{profile.about}</p>
      </div>

      <div class="flex gap-4 flex-wrap md:justify-center">
        <a href={`mailto:${profile.email}`} class="btn-primary">
          <Mail class="w-4 h-4"/>
          Email Me
        </a>

        <div class="flex gap-3">
          {socials.map((social) => {
            const Icon = iconMap[social.platform];
            return (
              <a
                href={social.url}
                target="_blank"
                rel="noopener"
                class="btn-icon"
                aria-label={social.platform.charAt(0).toUpperCase() + social.platform.slice(1)}
              >
                <Icon class="w-4 h-4" />
              </a>
            );
          })}
        </div>
      </div>
    </div>
  </div>
</section>
